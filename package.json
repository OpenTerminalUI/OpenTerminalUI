{
  "name": "open-terminal-ui",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@napi-rs/cli": "^3.5.1",
    "@types/node": "^25.0.8",
    "husky": "^9.1.7",
    "npm-check-updates": "^19.3.1",
    "rolldown-plugin-solid": "^0.2.1",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "bun install",
    "build": "moon run :build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "ncu:update": "npm-check-updates -u && moon :ncu-update && bun install",
    "prepare": "husky"
  },
  "engines": {
    "node": "24.13.0"
  }
}

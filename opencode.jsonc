{
  "$schema": "https://opencode.ai/config.schema.json",
  // OpenCode configuration for OpenTerminalUI
  // A hybrid Rust + React Ink terminal application

  // Theme and display
  "theme": "dark",

  // Plugins
  "plugins": ["oh-my-opencode", "frontend-design"],

  // MCP Servers
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-filesystem", "."]
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-memory"]
    }
  },

  // Custom commands for this project
  "commands": {
    "/lint": {
      "description": "Run all linters",
      "prompt": "Run biome check and cargo clippy to lint the entire project."
    },
    "/build": {
      "description": "Build all packages",
      "prompt": "Run moon run :build to build all packages in the monorepo."
    },
    "/test": {
      "description": "Run all tests",
      "prompt": "Run cargo test for Rust code and any available tests for TypeScript packages."
    }
  }
}

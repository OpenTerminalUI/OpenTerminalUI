{
  "name": "@openterminal-ui/ui",
  "version": "0.1.0",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "solid": "./src/index.tsx",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./jsx-runtime": {
      "types": "./jsx-runtime.d.ts"
    },
    "./jsx-dev-runtime": {
      "types": "./jsx-runtime.d.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "demo": "bun run build && bun run scripts/run-solid-demo.ts",
    "demo:dev": "bun run scripts/run-demo.ts",
    "editor": "bun run scripts/run-editor.ts"
  },
  "dependencies": {
    "@openterminal-ui/core": "workspace:*",
    "yoga-layout": "^3.2.1",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@types/node": "^25.0.8",
    "babel-preset-solid": "^1.9.10",
    "rolldown-plugin-solid": "^0.2.1",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.9.3"
  }
}

{
  "name": "@openterminal-ui/ui",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "solid": "./src/index.tsx",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./jsx-runtime": {
      "types": "./jsx-runtime.d.ts"
    },
    "./jsx-dev-runtime": {
      "types": "./jsx-runtime.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "demo": "bun run build && bun run scripts/run-solid-demo.ts",
    "demo:dev": "bun run scripts/run-demo.ts",
    "editor": "bun run scripts/run-editor.ts"
  },
  "dependencies": {
    "@openterminal-ui/core": "workspace:*",
    "yoga-layout": "^3.2.1",
    "solid-js": "^1.9.9"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@types/node": "^22.15.32",
    "babel-preset-solid": "^1.9.9",
    "esbuild-plugin-solid": "^0.6.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
